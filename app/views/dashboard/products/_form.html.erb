<%= form_for([:dashboard, @product], {multipart: true}) do |form| %>

  <%= has_errors? @product %>

  <div class="field">
    <%= form.label :logo %>
    <%= form.file_field :logo %>
  </div>

  <div class="field">
    <%= form.label :name %>
    <div class='input-group'>
    <div class='input-group-addon'><%= fa_icon "tags" %></div>
    <%= form.text_field :name, class: 'form-control', required: 'required',
    placeholder: 'Digite o nome', autocomplete:'0ff' %>
    </div>
  </div>

  <div class="field">
    <%= form.label :description %>
    <%= form.text_area :description, class: 'form-control', required: 'required',
    placeholder: 'Digite a descrição', autocomplete: 'off' %>
  </div>

  <div class="field">
    <%= form.label :tags %>
    <div class='input-group'>
    <div class='input-group-addon'><%= fa_icon "tag" %></i></div>
    <%= form.text_field :tags, class: 'form-control', required: 'required',
    placeholder: 'Digite as tags', autocomplete: 'off' %>
    </div>
  </div>

  <div class="actions">
    <%= form.submit nil, class: 'btn btn-primary btn-lg top' %>
  </div>
<% end %>
