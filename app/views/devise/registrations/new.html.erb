<% provide :title, "Sign Up" %>

<div class='container'>
  <div class='row'>
    <div class='col-md-12'>

      <div class='col-md-12 text-center' style="margin-top: 50px; margin-bottom: 40px;">
        <%= link_to image_tag('logo.png', with: 96, height: 39), root_path %>
      </div>

      <div class='col-md-4 col-md-offset-4'>
      <div class='panel panel-default padding' style="padding: 20px;">
      <h3 class='text-center'>Sign up</h3>

      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= devise_error_messages! %>

        <div class="field">
          <div class='input-group'>
          <div class='input-group-addon'><%= fa_icon "user" %></div>
          <%= f.email_field :name, class: 'form-control', required: 'required',
          placeholder: 'Digite o nome', autocomplete: 'off' %>
          </div>
        </div>

        <div class="field">
          <div class='input-group'>
          <div class='input-group-addon'><i>@</i></div>
          <%= f.email_field :email, class: 'form-control', required: 'required',
          placeholder: 'Digite o e-mail', autocomplete: 'off' %>
          </div>
        </div>

        <div class="field">
          <div class='input-group'>
          <div class='input-group-addon'><%= fa_icon "lock" %></div>
          <%= f.password_field :password, class: 'form-control', required: 'required',
          placeholder: 'Digite a senha', autocomplete: "off" %>
          </div>
        </div>

        <div class="field">
          <div class='input-group'>
          <div class='input-group-addon'><%=fa_icon "lock" %></div>
          <%= f.password_field :password_confirmation, class: 'form-control',
          required: 'requierd', placeholder: 'Confirme a senha', autocomplete: "off" %>
          </div>
        </div>

        <div class="actions">
          <%= f.submit "Sign up", class: 'btn btn-primary btn-lg top' %>
        </div>
      <% end %>
      </div>
    </div>
  </div>
</div>
