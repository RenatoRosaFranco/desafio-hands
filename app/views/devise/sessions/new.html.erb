<% provide :title, "Sign In" %>

<div class='container'>
  <div class='row'>
    <div class='col-md-12'>

      <div class='col-md-12 text-center' style="margin-top: 60px; margin-bottom: 50px;">
        <%= link_to image_tag('logo.png', with: 96, height: 39), root_path %>
      </div>

      <div class='col-md-4 col-md-offset-4'>
      <div class='panel panel-default padding' style="padding: 20px;">
        <h3 class='text-center'>Log in to your account</h3>
        <hr style='border: 1px solid #FFF;'>

          <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
            <div class="field">
              <div class='input-group'>
              <div class='input-group-addon'><%= fa_icon "user" %></i></div>
              <%= f.email_field :email, class: 'form-control', required: 'required',
              placeholder: 'Digite o e-mail', autocomplete: 'off', autofocus: true %>
            </div>

            <div class="field">
              <div class='input-group'>
              <div class='input-group-addon'><%= fa_icon "lock" %></div>
              <%= f.password_field :password, class: 'form-control', requierd: 'required',
              placeholder: 'Digite a senha', autocomplete: "off" %>
              </div>
            </div>

            <div class="actions">
              <%= f.submit "Log in", class: 'btn btn-primary btn-lg top' %>
            </div>
           <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
