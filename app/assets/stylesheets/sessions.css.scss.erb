.sessions, .registrations
{
  background-color: #435060;

  .field
  {
    position: relative;
    margin-top: 20px;
    margin-bottom: 20px;
  }

  h3
  {
    font-size: 24px;
    font-weight: 200;
    line-height: 1.1;
    position: relative;
    color: #c6d202;
    margin-bottom: 20px;
  }

  .panel-default
  {
    position: relative;
    border-radius: 8px;
  }

  form
  {
    position: relative;

    .input-group-addon
    {
      position: relative;
      background-color: #FFF;
      border: 1px solid #c6d202 !important;
      border-right: 0px !important;
      i
      {
        color: #c6d202;
        font-size: 18px;
      }
    }

    input[type=text], input[type=email], input[type=password]
    {
      border-left: none !important;
      border: 1px solid #c6d202;
      position: relative;
      height: 44px;
    }
    input[type=submit]
    {
      position: relative;
      width: 100%;
      border: 1px solid #c6d202;
      background-color: #c6d202;
      color: #FFF;
    }

  }

}
